<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".MainActivity"
  android:gravity="center_horizontal"
  android:orientation="vertical"
  android:background="#E5E7E9"
  >
  <TextView
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:text="Calculate Your"
    android:textColor="#388E3C"
    android:textSize="25sp" />

  <TextView
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:padding="10sp"
    android:background="#5fae62"
    android:text="Age"
    android:textColor="#7B1FA2"
    android:textSize="25sp"
    android:tooltipText="App Trial" />

  <TextView
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:text="In Minutes"
    android:textColor="#388E3C"
    android:textSize="25sp" />

  <Button
    android:id="@+id/btnDatePicker"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:padding="16sp"
    android:backgroundTint="#A3E4D7 "
    android:text="SELECT DATE"
    android:textColor="#2E7D32"
    android:textSize="18sp"

    />

  <TextView
    android:id="@+id/tvSelectedDate"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:text="--/--/--"
    android:textColor="#388E3C"
    android:textSize="20sp" />

  <TextView
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:text="Selected Date"
    android:textColor="#22A7B8"
    android:textSize="20sp" />


  <TextView
    android:id="@+id/tvAgeInMinutes"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:text="----"
    android:textColor="#388E3C"
    android:textSize="35sp" />

  <TextView
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:text="Time in Min"
    android:textColor="#22A7B8"
    android:textSize="20sp" />


</LinearLayout>